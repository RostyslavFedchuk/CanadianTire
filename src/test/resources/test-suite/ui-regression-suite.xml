<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DGL UI full suite (regression)">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Canadian Tire UI Suite" parallel="methods">
        <classes>
            <class name="org.canadian.tire.CanadianTireUiSearchTests"/>
        </classes>
